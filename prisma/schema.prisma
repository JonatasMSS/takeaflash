// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id @default(uuid())
  username   String
  email      String       @unique
  flashcards Flashcard[]
  tags       Tag[]
  ViewedDate ViewedDate[]

  @@map("users")
}

model Flashcard {
  id              String            @id @default(uuid())
  title           String            @unique
  content         String
  tag             Tag               @relation(fields: [tagId], references: [id])
  User            User?             @relation(fields: [userId], references: [id])
  userId          String?
  tagId           Int
  ViewedFlashcard ViewedFlashcard[]

  @@map("flashcards")
}

model Tag {
  id    Int    @id @default(autoincrement())
  name  String @unique
  color String

  User      User?       @relation(fields: [userId], references: [id])
  userId    String?
  Flashcard Flashcard[]

  @@map("tags")
}

model ViewedFlashcard {
  id           String      @id @default(uuid())
  isCorrect    Boolean
  ViewedDate   ViewedDate? @relation(fields: [viewedDateId], references: [id])
  viewedDateId String?     @unique
  flashcard    Flashcard   @relation(fields: [flashcardId], references: [id])
  flashcardId  String      @unique
}

model ViewedDate {
  id               String            @id @default(uuid())
  date             DateTime          @default(now())
  viewedFlashcards ViewedFlashcard[]
  user             User              @relation(fields: [userId], references: [id])
  userId           String
}
